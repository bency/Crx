{ 

"manifest_version" : 2

, "name" : "Birthday 86er for Google+"

, "version" : "1.0"
, "description" : 


  "Hides Google+ birthday notifications on Google.com"

, "icons" : 
	{ 
	  "16"  : "icon-16.png"
	, "48"  : "icon-48.png"
	, "64"  : "icon-64.png"
	, "128" : "icon-128.png"
	, "256" : "icon-256.png"
  }

, "permissions": 
	[ "http://www.google.com/*"
	, "https://www.google.com/*"
	]

, "content_scripts" : 
	[ { "matches" : 
		[ "https://www.google.com/*"
		, "http://www.google.com/*"
		]
    , "js" : 
				[ "nobirthday.js"
				]
    }
  ]
}
